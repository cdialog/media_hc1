<?xml version="1.0" ?>
<dialog>

<skin name="skin1" 
		   default_type="CLASSIC" 
		 font="ui/gun4fc.ttf"
		   >
		 <color type="BUTTON_TEXT" r="255" g="255" b="255" a="255"/>
             <color type="3D_FACE" r="255" g="255" b="255" a="0"/>
             <color type="3D_DARK_SHADOW" a="0"/>
		 <color type="3D_SHADOW" a="0"/>
		 <color type="3D_HIGH_LIGHT" a="0"/>
                          
	 </skin>




<gui type="IMAGE" name="letterbox" 
		 x="170" y="0" w="300" h="480" 
		 texture="ui/hud_letterbox_big.tga">
	</gui>

<gui type="STATIC" name="id_trackname" 
			 x="230" y="20" w="180" h="30"  
			 text="id_trackname" alpha="255"
			 border="1" word_wrap="0" fill_bk="0"
			 hcenter="80"
		 font_size="14"
		 font="ui/gun4fc.ttf">
		 <color r="73" g="211" b="246" a="255"/>
		</gui>

<gui type="STATIC" name="id_hdpause" 
			 x="240" y="45" w="160" h="30"  
			 text="id_hdpause" alpha="255"
			 border="1" word_wrap="0" fill_bk="0"
			 hcenter="80"
		 font_size="14"
		 font="ui/gun4fc.ttf">
		</gui>

<gui type="BUTTON" name="id_hdresume" default_focus="1"
			 x="240" y="115" w="160" h="30"  
			 text="id_hdresume" alpha="255"
                   tex_focused="ui/ui_selector.png"
				   tex_pressed="ui/ui_selector_pressed.png" 
			  border="1" word_wrap="0" fill_bk="0"
		 font_size="16"
		 font="ui/gun4fc.ttf">
		</gui>

<gui type="BUTTON" name="id_hdrestart" 
			 x="240" y="150" w="160" h="30"  
			 text="id_hdrestart" alpha="255"
                   tex_focused="ui/ui_selector.png"
				   tex_pressed="ui/ui_selector_pressed.png" 
			  border="1" word_wrap="0" fill_bk="0"
		 font_size="16"
		 font="ui/gun4fc.ttf">
		</gui>

<gui type="STATIC" name="id_sfxvol" 
			 x="240" y="185" w="160" h="30"  
			 text="id_sfxvol" alpha="255"
			 border="1" word_wrap="0" fill_bk="0"
			 hcenter="80"
		 font_size="16"
		 font="ui/gun4fc.ttf">
		 <color r="73" g="211" b="246" a="255"/>
		</gui>
    
    <gui type="TEXTSLIDER" name="sfxvolume"
		 tex_focused="ui/ui_selector_slider.png"
		 btn_aspect_ratio = "1.0"
		 x="220" y="210" w="200" h="30"
		 alpha="255"
		 font_size="14"
		 font="ui/gun4fc.ttf"
		 wrap="0"
		 left_tex_norm="ui/ui_Bleft.tga" left_tex_pressed="ui/ui_Bleft_A.tga" right_tex_norm="ui/ui_Bright.tga" right_tex_pressed="ui/ui_Bright_A.tga"
		 >
	</gui>	
	
	<gui type="STATIC" name="id_muvol" 
			 x="240" y="245" w="160" h="30"  
			 text="id_muvol" alpha="255"
			 border="1" word_wrap="0" fill_bk="0"
			 hcenter="80"
		 font_size="16"
		 font="ui/gun4fc.ttf">
		 <color r="73" g="211" b="246" a="255"/>
		</gui>
		
		<gui type="TEXTSLIDER" name="musicvolume"
		 tex_focused="ui/ui_selector_slider.png"
		 btn_aspect_ratio = "1.0"
		 x="220" y="270" w="200" h="30"
		 alpha="255"
		 font_size="14"
		 font="ui/gun4fc.ttf"
		 wrap="0"
		 left_tex_norm="ui/ui_Bleft.tga" left_tex_pressed="ui/ui_Bleft_A.tga" right_tex_norm="ui/ui_Bright.tga" right_tex_pressed="ui/ui_Bright_A.tga"
		 >
	</gui>

	<!-- touch-controls for android -->
	<gui type="BUTTON" name="id_touch_controls" 
		 x="240" y="305" w="160" h="30"  
		 text="id_android_controls" alpha="255"
		   tex_focused="ui/ui_selector.png"
		   tex_pressed="ui/ui_selector_pressed.png" 
		 border="1" word_wrap="0" fill_bk="0"
		 font_size="14"
		 font="ui/gun4fc.ttf">
	</gui>


	<gui type="BUTTON" name="id_hdquit" 
			 x="240" y="395" w="160" h="30"  
			 text="id_exit" alpha="255"
                   tex_focused="ui/ui_selector.png"
				   tex_pressed="ui/ui_selector_pressed.png" 
			  border="1" word_wrap="0" fill_bk="0"
		 font_size="16"
		 font="ui/gun4fc.ttf">
		</gui>


</dialog>
